@model Restauracja.Controllers.OrdersController.TimeLap

@{
    ViewBag.Title = "Wybierz przedział czasu";
}

<h2>Wybierz przedział czasu</h2>

@if (ViewBag.Error == true)
{
    <div class="alert alert-danger" role="alert">
        Wybrałeś zły przedział czasu.<br />
        Spróbuj ponownie.
    </div>
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.StartDate, htmlAttributes: new { @id = "datepick", type = "date" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @id = "datepick", type = "date" } })
                @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EndDate, htmlAttributes: new { @id = "datepick", type = "date" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @id = "datepick", type = "date" } })
                @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Wybierz" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
