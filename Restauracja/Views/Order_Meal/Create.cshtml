@model Restauracja.Models.Order_Meal

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Order_Meal</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.MealId, "Nazwa posiłku", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MealId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Meal.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Dodaj", "Create", new { OrderId = ViewBag.ZamowienieId }, new { @class = "btn btn-primary" })
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

